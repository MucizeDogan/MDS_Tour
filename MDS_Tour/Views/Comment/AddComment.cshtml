@model EntityLayer.Concrete.Destination
@inject IHttpContextAccessor HttpContextAccessor

<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Leave a Comment</h4>
    <p class="mb-4">
        Your email address will not be published. Required fields are marked *
    </p>
    @if (!string.IsNullOrEmpty(HttpContextAccessor.HttpContext.User.Identity.Name))
    {
        <form method="post" asp-action="AddComment" asp-controller="Comment">

        <div class="form-group">
            <textarea name="CommentContent" class="form-control" placeholder="Your Comment*" required=""
                      spellcheck="false"></textarea>
        </div>
        <div class="input-grids row">

            @*<div class="form-group col-lg-6">
            <input type="text" name="CommentUser" class="form-control" placeholder="Your Name*"
            required="">
            </div>*@
            <div class="form-group col-lg-6">
                <input type="hidden" value="@ViewBag.userId" name="AppUserId" class="form-control" placeholder="Destination ID" required="">
            </div>
            <div class="form-group col-lg-6">
                <input type="hidden" value="@Model.DestinationId" name="DestinationId" class="form-control" placeholder="Destination ID" required="">
            </div>
        </div>
        <div class="submit text-right">
            <button class="btn btn-style btn-primary">Post Comment </button>
        </div>

    </form>
    }
    <span>Please <a href="/Login/SignIn/" class="text-bold">Sign In </a> for comment</span>
    
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
