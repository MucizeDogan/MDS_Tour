@model List<VisitorModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h1>Api Visitor List</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Surname</th>
        <th>City</th>
        <th>Country</th>
        <th>Mail</th>
        <th>Update</th>
        <th>Delete</th>
        
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <th>@item.VisitorId</th>
        <td>@item.Name</td>
        <td>@item.Surname</td>
        <td>@item.City</td>
        <td>@item.Country</td>
        <td>@item.Mail</td>
        <td><a href="/Admin/VisitorApi/UpdateVisitor/@item.VisitorId" class="btn btn-outline-success">Update</a></td>
        <td><a href="/Admin/VisitorApi/DeleteVisitor/@item.VisitorId" class="btn btn-outline-danger">Delete</a></td>
    </tr>
    }
</table>
<a href="/Admin/VisitorApi/AddVisitor/" class="btn btn-outline-primary"> ADD </a>
