@model VisitorModel
@{
    ViewData["Title"] = "AddVisitor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 style="color:lightcoral" class="mb-0">Add Visitor with Api</h3>

            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">Visitor Name</label>
                        <input type="text" asp-for="Name" class="form-control" id="basic-default-fullname" />
                        <span asp-validation-for="Name" class="alert-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-company">Visitor Surname</label>
                        <input type="text" asp-for="Surname" class="form-control" id="basic-default-company" />
                        <span asp-validation-for="Surname" class="alert-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-email">City</label>
                        <div class="input-group input-group-merge">
                            <input type="text"
                                   id="basic-default-email"
                                   class="form-control"
                                   asp-for="City" />
                                   <span asp-validation-for="City"></span>
                        </div>                       
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-phone">Country</label>
                        <input type="text"
                               id="basic-default-phone"
                               class="form-control phone-mask" 
                               asp-for="Country"/>
                               <span asp-validation-for="Country"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-message">Mail Adress</label>
                        <input type="text" asp-for="Mail"class="form-control" />
                        <span asp-validation-for="Mail"></span>
                    </div>      
                    <button  class="btn btn-primary">Add</button>
                </form>
            </div>
        </div>
    </div>

</div>

