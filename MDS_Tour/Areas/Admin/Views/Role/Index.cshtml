@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br /> <br />
<h1 style="margin-left:40px">Role List</h1>
@if (Model.Count>0)
{
    <table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Role Name</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a style="width:150px; height:40px" href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-outline-warning">Update</a></td>
            <td><a style="width:150px; height:40px" href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Delete</a></td>
        </tr>
    }
</table>    
}
else
{
    <div class="alert alert-warning">
        <span>NO ROLES FOUND.</span>
    </div>
}
<a href="/Admin/Role/CreateRole/"class="btn btn-outline-primary">New Role</a>