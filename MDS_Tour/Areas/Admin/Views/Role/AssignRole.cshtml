        <select class="js-example-basic-multiple" id="selectedRoles" name="states[]" multiple="multiple" style="width:50%">
            @for (int i = 0; i < Model.Count; i++)
            {
                <option value="@Model[i].RoleId">@Model[i].RoleName</option>
