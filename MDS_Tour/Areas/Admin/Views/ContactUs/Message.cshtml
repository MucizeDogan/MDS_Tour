@model EntityLayer.Concrete.ContactUs
@{
    ViewData["Title"] = "Message";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="~/ckeditor_4.21.0_standard/ckeditor/contents.css" />
<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 style="color:lightcoral" class="mb-0">MESSAGE</h4>

            </div>
            <div class="card-body">
                <form method="post">
                    @Html.HiddenFor(x=>x.ContactUsId)
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">Name</label>
                        <input type="text" asp-for="Name" class="form-control" id="basic-default-fullname" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-company">Mail</label>
                        <input type="text" asp-for="Mail" class="form-control" id="basic-default-company" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-email">Subject</label>
                        <div class="input-group input-group-merge">
                            <input type="text"
                                   id="basic-default-email"
                                   class="form-control"
                                   asp-for="Subject" readonly />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-phone">Message Content</label>
                        @*<textarea style="height:100px" id="ckeditor" asp-for="MessageBody" class="form-control" readonly ></textarea>*@

                        <@Html.Raw(Model.MessageBody)
                    </div>

                    @*<button type="submit" class="btn btn-primary">Update</button>*@
                </form>
            </div>
        </div>
    </div>

</div>

@*<script src="~/ckeditor_4.21.0_standard/ckeditor/ckeditor.js"></script>*@
