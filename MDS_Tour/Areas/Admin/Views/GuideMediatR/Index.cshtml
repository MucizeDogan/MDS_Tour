@model List<GetAllGuideQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2 style="color:lightcoral" class="mb-0">CQRS MediatR Guide List</h2>
<br />

<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Guide's Name</th>
        <th>Description</th>
        <th>Operations</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.GuideId</td>
        <td>@item.GuideName</td>
        <td>@item.Description</td>
        <td><a href="/Admin/GuideMediatR/GetGuide/@item.GuideId" class="btn btn-outline-warning">Update</a>
            <a href="#" class="btn btn-outline-danger">Delete</a></td>

    </tr>    
    }
</table>
<a href="/Admin/GuideMediatR/AddGuide/" class="btn btn-primary">Add New Guide</a>

