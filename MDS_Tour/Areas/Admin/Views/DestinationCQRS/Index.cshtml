@model List<GetAllDestinationQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2 style="color:lightcoral" class="mb-0">CQRS Destination Tour Data</h2>
<br />

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>City</th>
        <th>Day-Night</th>
        <th>Price</th>
        <th>Capacity</th>
        <th>Update - Delete</th>
        @*<th>Delete</th>*@
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.id</td>
        <td>@item.city</td>
        <td>@item.DayNight</td>
        <td>@item.price</td>
        <td>@item.capacity</td>
        <td><a href="/Admin/DestinationCQRS/GetDestination/@item.id" class="btn btn-outline-warning">Update</a>
        <a  href="/Admin/DestinationCQRS/DeleteDestination/@item.id"class="btn btn-outline-danger">Delete</a></td>
    </tr>
    }
</table>
<a href="/Admin/DestinationCQRS/AddDestination/" class="btn btn-primary">New Destination</a>


